		|'ф2' |'Клапан обратный НЕРПА-КО'|'100'              |''                 |'УХЛ2'             |'Н'                |'1000'             |''|
		|'ф3' |'Клапан обратный НЕРПА-КО'|'100'              |''                 |'УЗ'               |'Н'                |'1000'             |''|
		|'ф4' |'Клапан обратный НЕРПА-КО'|'100'              |''                 |'УЗ'               |'К'                |'1000'             |''|
